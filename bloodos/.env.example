
# ─── Database ──────────────────────────────────────────────
# Option A — Local development (Docker)
# docker run --name bloodos-pg -e POSTGRES_DB=bloodos -e POSTGRES_PASSWORD=postgres -p 5432:5432 postgres:16
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/bloodos"

# Option B — AWS RDS PostgreSQL (development — public access on)
# DATABASE_URL="postgresql://bloodos_admin:PASSWORD@bloodos-db.abc123.us-east-1.rds.amazonaws.com:5432/bloodos"

# Option C — AWS RDS PostgreSQL (production — private VPC + SSL + pool)
# DATABASE_URL="postgresql://bloodos_admin:PASSWORD@bloodos-db.abc123.us-east-1.rds.amazonaws.com:5432/bloodos?sslmode=require&connection_limit=10&pool_timeout=20"

# Option D — Azure Database for PostgreSQL Flexible Server
# DATABASE_URL="postgresql://bloodos_admin:PASSWORD@bloodos-pg.postgres.database.azure.com:5432/bloodos?sslmode=require"

# ─── Object Storage (AWS S3) ─────────────────────────
AWS_REGION="us-east-1"
AWS_S3_BUCKET_NAME="bloodos-bucket"
AWS_ACCESS_KEY_ID="your-iam-access-key-id"
AWS_SECRET_ACCESS_KEY="your-iam-secret-access-key"

# ─── Authentication ────────────────────────────────────────
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_REFRESH_SECRET="your-refresh-secret-key-must-differ-from-jwt-secret"

# ─── AWS ───────────────────────────────────────────────────
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="us-east-1"
AWS_BUCKET_NAME="bloodos-uploads"

# ─── AWS SES (Transactional Email) ─────────────────────────
SES_EMAIL_SENDER="noreply@yourdomain.com"

# ─── Redis ─────────────────────────────────────────────────
REDIS_URL="redis://localhost:6379"

# ─── App ───────────────────────────────────────────────────
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"